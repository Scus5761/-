<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_home_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#8866ff00"
        android:text="软件管理"
        android:gravity="center_horizontal"
        android:textSize="22sp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_softmanager_rom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="内存可用 32M"
       android:textSize="15sp"
        android:padding="3dp"
        android:textColor="#000000"
        android:layout_gravity="center"/>
        <TextView
            android:id="@+id/tv_softmanager_sd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="SD卡可用内存 1024M"
            android:textSize="15sp"
            android:padding="3dp"
            android:textColor="#000000"
            android:gravity="center"/>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/lv_softmanager_application"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ListView>

        <TextView
            android:id="@+id/tv_softmanager_float"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="用户程序16"
            android:textSize="15sp"
            android:padding="5dp"
            android:textColor="#ffffff"
            android:background="#888888" />

        <ProgressBar
            android:id="@+id/pb_softmanager"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </FrameLayout>



</LinearLayout>