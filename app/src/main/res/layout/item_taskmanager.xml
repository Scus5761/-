<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_taskmanager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/app"/>
    <TextView
        android:id="@+id/tv_taskmanager_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="手机卫士"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_toRightOf="@id/iv_taskmanager"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp" />
    <TextView
        android:id="@+id/tv_taskmanager_ram"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="内存占用：3.6MB"
        android:textSize="15sp"
        android:textColor="#006677"
        android:layout_toRightOf="@id/iv_taskmanager"
        android:layout_below="@id/tv_taskmanager_name"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"/>

    <CheckBox
        android:id="@+id/cb_taskmanager_ischecked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20sp"
        android:focusable="false"
        android:clickable="false"/>





</RelativeLayout>