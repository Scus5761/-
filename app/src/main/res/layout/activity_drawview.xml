<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/draw_toast_top"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="18sp"
        android:text="按住提示框，拖到任意位置 \n 按手机返回键，立即生效。"
        android:visibility="invisible"
        android:textColor="#000000"
        android:background="@drawable/btn"/>

    <LinearLayout
        android:id="@+id/ll_draw_toast"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@drawable/btn_green_normal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"/>
        <TextView
            android:id="@+id/tv_toast_custom"
            android:text="双击居中"
            android:textColor="#ff5566"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:id="@+id/draw_toast_bottom"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="18sp"
        android:text="按住提示框，拖到任意位置 \n 按手机返回键，立即生效。"
        android:textColor="#000000"
        android:background="@drawable/btn"/>

</RelativeLayout>