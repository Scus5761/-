<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_softmanager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/app"/>
    <TextView
        android:id="@+id/tv_softmanager_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="手机卫士"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_toRightOf="@id/iv_softmanager"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp" />
    <TextView
        android:id="@+id/tv_softmanager_issd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="手机内存"
        android:textSize="15sp"
        android:textColor="#006677"
        android:layout_toRightOf="@id/iv_softmanager"
        android:layout_below="@id/tv_softmanager_name"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/tv_softmanager_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1.1.3"
        android:textSize="15sp"
        android:layout_toRightOf="@id/tv_softmanager_issd"
        android:layout_below="@id/tv_softmanager_name"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"/>

    <ImageView
        android:id="@+id/iv_softmanager_lock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/unlock"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>


</RelativeLayout>